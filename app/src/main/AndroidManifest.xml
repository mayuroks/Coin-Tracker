<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coin.tracker.zxr">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="coin.tracker.zxr.BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="coin.tracker.zxr.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="coin.tracker.zxr.home.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="coin.tracker.zxr.CubicLineChartActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="coin.tracker.zxr.BaseActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>